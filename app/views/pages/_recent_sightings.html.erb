<% if observations.count>0 %>
  <div class="row justify-content-center mt-5">
    <div class="col-10">
      <div class="row my-3">
        <div class="col">
        	<div class="row">
        	  <div class="col h4 text-center proxima section-header mb-3">Recent Sightings</div>
        	</div>	
        	<div class="row" id="observations-block">
      		  <% observations.each.with_index(1) do |o,i| %>
      		    <%= render partial: 'observation', locals: { o: o, i: i } %>
          	<% end %>
          </div>
          <div class="row justify-content-center mt-5">
            <div class="col-4">
              <button type="button" class="btn btn-warning w-100" id="show_more" data-api-parameters="<%= api_parameters %>">Show more</button>
            </div>              
          </div>  
        </div>      
      </div>
    </div>
  </div> 
<% end %>