<div class="row m-0 p-0" style="background: url(<%= @region.header_image %>) no-repeat center center / cover;">
  <div class="col d-flex justify-content-center">
    <img src="<%= @region.logo_image %>" class="img-fluid" style="width:80px;">
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-lg-10 d-flex justify-content-center h2 fw-bold">
    <%= @region.name %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-10">
    <div class="row my-3">
      <div class="col" id="map" style="width:100%; height:400px;">
        <script>
          (function() {
            const s = { lat: 35.6804, lng : 139.7690 };
            const map = new google.maps.Map(document.getElementById("map"), { zoom: 5, center: s, controlSize: 20 });
            const marker = new google.maps.Marker({ position: s, map: map });
          })();
        </script>
      </div>  
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-lg-6 d-flex justify-content-center h6">
    <%= @region.description %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-lg-10">
    <div class="row">
      <div class="col d-flex justify-content-center"><%= @region.observations.count %></div>
      <div class="col d-flex justify-content-center"><%= @region.contests.count %></div>
      <div class="col d-flex justify-content-center"><%= number_with_delimiter @region.population, delimiter: ',' %></div>
    </div>
    <div class="row">
      <div class="col d-flex justify-content-center">Observations</div>
      <div class="col d-flex justify-content-center">Contests</div>
      <div class="col d-flex justify-content-center">Population</div>
    </div>  
  </div>
</div>    

<div class="row justify-content-center">
  <div class="col-10">
    <div class="row my-3">
      <div class="col">
        <div class="row mb-3">
          <h1>Contests</h1>
        </div>  
        <div class="row">
          <div class="col">
            <% @region.contests.ordered_by_starts_at.first(5).each.with_index(1) do |c,i| %>
              <%= render partial: 'contest', locals: { c: c } %>
            <% end %>
          </div>    
        </div>
      </div>      
    </div>
  </div>
</div>
